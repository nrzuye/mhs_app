<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ln_mahasiswa"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mahasiswa"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_mhs"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_fakultas"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Fakultas"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_fakultas"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_absensi"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Absensi"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_absensi"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ln_dosen"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Dosen"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_dosen"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_keuangan"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Keuangan"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_keuangan"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_transkip"
                android:clickable="true"
                android:background="@drawable/list_row_selector"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Transkip"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_khs"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>