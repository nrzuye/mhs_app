<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ln_mhs_aktif"
                    android:background="@drawable/list_row_selector"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Aktif"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_launcher_dosen"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/jumlah_data"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_mhs_nonaktif"
                    android:background="@drawable/list_row_selector"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:text="Nonaktif"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_dosen"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@id/jumlah_data2"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ln_mhs_cuti"
                android:background="@drawable/list_row_selector"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cuti"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_dosen"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/jumlah_data3"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_mhs_lulus"
                android:background="@drawable/list_row_selector"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Lulus"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_dosen"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/jumlah_data4"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>